<div id="answers">
  <div class="row answer" id="answer_1" md_answer="hello there">
    <div class="points col-xs-2 col-md-1">
      <div class="arrow" {{action upboat}}>
        <i {{bindAttr class="upboated:voted :fa :fa-arrow-up :pointer :tip"}} title="Upboat this answer"></i>
      </div>
      <div class="circle vote_count tip" data-placement="right" title="Vote count">
        <div>{{totalVotesCount}}</div>
      </div>
      <div class="arrow" {{action downboat}}>
        <i {{bindAttr class="downboated:voted :fa :fa-arrow-down :pointer :tip"}} title="Downboat this answer"></i>
      </div>
      <div {{action starAnswer}} {{bindAttr class="model.starred:starred :star"}}>
        <i {{bindAttr class="model.starred:fa-star:fa-star-o :fa :pointer :tip"}} title="Save this answer"></i>
      </div>
    </div>
    <div class="col-xs-12 col-md-8">
      <div class="stuff">
        <div id="content"><p>hello there</p></div>
        <p class="nodisplay" id="edit_box"></p>
      </div>
      <p>
        <i>answered about 1 month ago by</i>
        {{#link-to 'user' user.id}}{{user.name}}{{/link-to}}
        |
        <a class="edit" href="#" {{action editAnswer}}>Edit</a>
      </p>
    </div>
  </div>
</div>
