{{#if isMobile}}
  <div class='row'>
    <div classs='col-md-12'>
      <ul class="nav nav-pills">
        <li class="active">
          <a href="#home" data-toggle="tab" {{action showForm}}>Create a new sentence</a>
        </li>
        <li>
          <a href="#home" data-toggle="tab" {{action showPreview}}>Preview</a>
        </li>
      </ul>
    </div>
  </div>
{{else}}
  <h3>Create a new sentence</h3>
{{/if}}

<div id='composer-body' class='row'>
  {{#unless preview}}
    <div id='compose-write' {{bindAttr class="isMobile:composer-mobile:col-md-7"}}>
      <form role="form">
        <div class="form-group">
          <label for="sentenceInput">Sentence</label>
          {{input id='sentenceInput' class='form-control' type="text" value=sentence}}
        </div>
        <div class="form-group">
          <label for="expArea">Explanation</label>
          (<a href='http://daringfireball.net/projects/markdown/syntax' target='_blank'>Markdown</a> allowed)
          {{textarea rows='5' id='expArea' value=explanation}}
        </div>
        <button class="btn btn-default" {{action createSentence}}>Pseudo Submit</button>
        <button class="btn btn-default" {{action reset}}>Reset</button>
        <button class="btn btn-default" {{action close}}>Close</button>
      </form>
    </div>
  {{/unless}}

  {{#if notMobileOrPreview}}
    <a href="#" {{action togglePreview}} class='toggle-preview'>{{{model.toggleText}}}</a>
    <div id='compose-preview' {{bindAttr class='isPreview:col-md-12:col-md-5'}}>
      <h5>Sentence Preview</h5>
      <div id='sentence-preview' class='preview'>
        {{markdown sentence}}
      </div>
      <h5>Explanation Preview</h5>
      <div id='exp-preview' class='preview'>
        {{markdown explanation}}
      </div>
    </div>
  {{/if}}
</div>
