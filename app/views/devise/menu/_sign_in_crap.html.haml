- if user_signed_in?
  %ul.nav.navbar-nav.navbar-right
    %li= link_to "Profile", show_user_path(current_user)
    %li= link_to "Sign out", destroy_user_session_path, method: :delete
- else
  = form_tag user_session_path, class: 'navbar-form navbar-right' do
    .form-group
      = text_field_tag 'user[email]', '', class: 'form-control'
    .form-group
      = password_field_tag 'user[password]', '', class: 'form-control'
    %button.btn.btn-success{:type => "submit"} Sign in
    = link_to "Sign up", new_user_registration_path, class: 'btn btn-primary', style: 'color:white'
